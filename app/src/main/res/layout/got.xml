<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <include
        layout="@layout/bbb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/tema"
        android:padding="8dp"
        android:layout_gravity="start|center"
        android:id="@+id/navigation_layou"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/roxoa"
        android:layout_marginTop="2dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/editTop"
        android:background="@drawable/ques"
        android:textStyle="bold"
        android:gravity="center"
        android:textColorHint="@color/roxoa"
        android:hint="TXT SUPERIOR" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/roxoa"
        android:textStyle="bold"
        android:background="@drawable/ques"
        android:gravity="center"
        android:textColorHint="@color/roxoa"
        android:layout_height="?actionBarSize"
        android:id="@+id/editBottom"
        android:hint="TXT INFERIOR"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="PRONTO"
        android:textColor="@color/roxoa"
        android:id="@+id/trep"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@drawable/ques"
        android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>