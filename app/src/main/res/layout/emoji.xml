<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <include
        layout="@layout/got"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:background="@drawable/tema"
        android:id="@+id/navigation_layout1"
        android:layout_gravity="start|center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="ADICIONAR / EXCLUIR"
        android:textColor="@color/roxoa"
        android:gravity="center"
        android:background="@drawable/ques"
        android:id="@+id/addemoji"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:gravity="center"
      android:layout_marginTop="10dp"
      android:background="@color/branco"
      android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_height="wrap_content">
      <ImageView
          android:layout_width="64dp"
          android:id="@+id/im_emoji1"
          android:background="@drawable/a"
          android:layout_height="64dp" />

          <ImageView
              android:layout_width="64dp"
              android:id="@+id/delet_emoji1"
              android:visibility="gone"
              android:background="@drawable/no_emoji"
              android:layout_height="64dp" />

          <TextView
              android:layout_width="wrap_content"
              android:text="Emoji 1"
              android:id="@+id/addemoji1"
              android:layout_gravity="center"
              android:textStyle="bold"
              android:textColor="@color/roxoa"
              android:layout_height="wrap_content" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_height="wrap_content">
      <ImageView
          android:layout_width="64dp"
          android:id="@+id/im_emoji2"
          android:background="@drawable/r"
          android:layout_height="64dp" />

          <ImageView
              android:layout_width="64dp"
              android:id="@+id/delet_emoji2"
              android:visibility="gone"
              android:background="@drawable/no_emoji"
              android:layout_height="64dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Emoji 2"
                android:id="@+id/addemoji2"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/roxoa"
                android:layout_height="wrap_content" />
      </LinearLayout>

  </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/branco"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="64dp"
                    android:id="@+id/im_emoji3"
                    android:background="@drawable/aaaa"
                    android:layout_height="64dp" />

                <ImageView
                    android:layout_width="64dp"
                    android:id="@+id/delet_emoji3"
                    android:visibility="gone"
                    android:background="@drawable/no_emoji"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Emoji 3"
                    android:id="@+id/addemoji3"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/roxoa"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="64dp"
                    android:id="@+id/im_emoji4"
                    android:background="@drawable/aaaaac"
                    android:layout_height="64dp" />

                <ImageView
                    android:layout_width="64dp"
                    android:id="@+id/delet_emoji4"
                    android:visibility="gone"
                    android:background="@drawable/no_emoji"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Emoji 4"
                    android:id="@+id/addemoji4"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/roxoa"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>